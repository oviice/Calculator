<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:weightSum="3"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/textView"
           android:layout_width="0dp"
           android:layout_weight="9"
           android:textSize="25sp"
           android:textColor="#1D1B1B"
           android:paddingRight="10dp"
           android:paddingBottom="10dp"
           android:background="#F1EDED"
           android:gravity="bottom|right"
           android:layout_height="match_parent" />
       <TextView
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/signId"
           android:textSize="25sp"
           android:textColor="#1D1B1B"
           android:paddingRight="10dp"
           android:paddingBottom="10dp"
           android:background="#F1EDED"
           android:gravity="bottom|right"/>
   </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageButton
                android:id="@+id/power_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
               android:src="@drawable/power_button"
                android:textSize="30sp" />

            <Button
                android:id="@+id/ac_btn"
                android:textAllCaps="false"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:textColor="#DF4618"
                android:background="#FFFFFFFF"
                android:text="Ac"
                android:textSize="28sp" />

            <ImageButton
                android:id="@+id/xbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:src="@drawable/ic_backspace_black_24dp" />



            <Button
                android:id="@+id/div_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="/"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/mul_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="*"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/sub_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="-"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="+"
                android:textSize="30sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:id="@+id/mod_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/dot_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#FFFFFFFF"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/equ_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#DF4618"
                android:text="="
                android:textSize="30sp" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>